<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="486.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MainViewController">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="System">
            <items>
              <MenuItem mnemonicParsing="false" text="Save" onAction="#save"/>
                  <MenuItem mnemonicParsing="false" text="Load" onAction="#load"/>
                  <MenuItem mnemonicParsing="false" text="Reset" onAction="#clear"/>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Navigation">
            <items>
              <MenuItem mnemonicParsing="false" text="View Bidders" onAction="#switchToBiddersView"/>
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <VBox alignment="TOP_CENTER" prefHeight="430.0" prefWidth="560.0">
         <children>
            <Label alignment="CENTER" text="Auction Management System">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <HBox prefHeight="346.0" prefWidth="560.0" spacing="10.0">
               <children>
                  <ListView fx:id="unsoldItems" prefHeight="314.0" prefWidth="279.0" onMouseClicked="#switchToItemViewUnsold"/>
                  <ListView fx:id="soldItems" prefHeight="314.0" prefWidth="274.0" onMouseClicked="#switchToItemViewSold"/>
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </HBox>
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#toggleAddPane" text="Add Auction Lot">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </VBox>
      <AnchorPane fx:id="addPane" prefHeight="200.0" prefWidth="600.0" visible="false">
         <children>
            <TextField fx:id="title" layoutX="31.0" layoutY="1.0" promptText="Title" />
            <TextField fx:id="description" layoutX="224.0" layoutY="1.0" promptText="Description" />
            <TextField fx:id="type" layoutX="406.0" layoutY="1.0" promptText="Type" />
            <DatePicker fx:id="originDate" layoutX="30.0" layoutY="34.0" prefHeight="26.0" prefWidth="150.0" promptText="Date" />
            <TextField fx:id="price" layoutX="224.0" layoutY="35.0" promptText="Price" text="0" />
            <TextField fx:id="image" layoutX="407.0" layoutY="35.0" promptText="Image URL" />
            <Button layoutX="267.0" layoutY="68.0" mnemonicParsing="false" onAction="#addAuctionLot" text="Add Item" />
         </children>
      </AnchorPane>
   </children>
</VBox>
